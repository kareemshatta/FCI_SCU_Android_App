<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kareem.fci_scu_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SelectStudentActivity"></activity>
        <activity
            android:name=".activities.TeamsActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.CreateTeamActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SlideActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.HomeActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CourseDetailsActivity"
            android:configChanges="orientation"
            android:parentActivityName=".activities.HomeActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".activities.CourseTutorialsStudentActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.CourseTutorialDoctorActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.CourseQuizDoctorActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.CourseQuizStudentActivity"
            android:parentActivityName=".activities.CourseDetailsActivity" />
        <activity
            android:name=".activities.CourseQuizDetailsStudentActivity"
            android:parentActivityName=".activities.CourseQuizStudentActivity" />
        <activity
            android:name=".activities.TeamsDetailsActivity"
            android:parentActivityName=".activities.TeamsActivity" />
    </application>

</manifest>